<div class="row">
  <div class="col-md-2 result-symbol text-danger">
    <%= result.is_correct? ? t(".correct") : t(".wrong") %>
  </div>
  <div class="col-md-4">
    <%= result.word.content %>
  </div>
  <div class="col-md-4">
    <%= result.answer.content %>
  </div>
  <div class="col-md-2">
    <% if result.word.has_audio? %>
      <%= render "shared/audio_button", url: result.word.audio.url %>
    <% end %>
  </div>
</div>
