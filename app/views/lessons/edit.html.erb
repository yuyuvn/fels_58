<div class="container-fluid">
  <div class="row" id="results">
    <div class="col-md-8 col-md-offset-4">
      <div class="row">
        <div class="col-md-4">
          <h2><%= @lesson.category.name %></h2>
        </div>
        <div class="col-md-4">
          <h2>
            <span id="answer_count">1</span>/
            <span id="total"><%= @lesson.results.count %></span>
          </h2>
        </div>
      </div>
    </div>
    <%= form_for @lesson,
      url: category_lesson_path(@lesson.category, @lesson),
      method: "patch",
      html: {id: "question_form"} do |form| %>
      <%= form.hidden_field :category_id %>
      <%= form.fields_for :results, wrapper: false do |result_form| %>
        <%= render "answer_form", form: result_form %>
      <% end %>
    <% end %>
  </div>
</div>