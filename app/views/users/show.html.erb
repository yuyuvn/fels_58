<% provide :title, t(".title", name: @user.name) %>

<div class="container-fluid">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= gravatar_for @user %></h1>
      <br />
      <%= @user.name %>
      <br />
      <%= t ".learned_x_words", learned_words_number: @user.learned_words %>
      <div class="clearfix"></div>
      <%= render "follow_form" if logged_in? %>
    </section>
  </aside>
  <div class="col-md-8 content">
    <h1><%= t ".activities" %></h1>
    <div class="container-fluid" id="activities">
      <%= render @user.activities %>
    </div>
  </div>
</div>