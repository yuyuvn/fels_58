<% provide :title, t(".title") %>

<% if logged_in? %>
  <div class="container-fluid">
    <aside class="col-md-4">
      <%= render "shared/user_info", user: current_user %>
    </aside>
    <div class="col-md-8 content">
      <div class="row">
        <div class="col-md-6">
          <%= button_to t(".words"), category_words_path(Category.first), method: "get", class: "btn btn-primary" %>
        </div>
        <div class="col-md-6">
          <%= button_to t(".lessons"), categories_path, method: "get", class: "btn btn-primary" %>
        </div>
      </div>
      <% if @activities.any? %>
        <div class="row">
          <h1><%= t ".activities" %></h1>
          <div class="container-fluid" id="activities">
            <%= render @activities %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= paginate @activities %>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".welcome" %></h1>

    <h2><%= t ".welcome_description" %></h2>
  </div>
<% end %>
