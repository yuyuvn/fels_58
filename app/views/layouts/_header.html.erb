<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Framgia", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav pull-right">
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t(:menu_account) %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:menu_settings), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t(:log_out), logout_path, method: "delete" %></li>
            </ul>
          </li>          
        <% else %>
          <li><%= link_to t(:log_in), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>