<section class="user_info">
  <h1><%= gravatar_for user %></h1>
  <br />
  <%= user.name %>
  <br />
  <%= t ".learned_x_words", learned_words_number: user.learned_words %>
  <br />
  <%= t ".rank", rank: user.rank %>
  <div class="clearfix"></div>
  <% if user.following.any? %>
    <div class="user_avatars">
      <% user.following.each do |folloed_user| %>
        <%= link_to folloed_user, title: folloed_user.name do %>
          <%= gravatar_for folloed_user, size: Settings.user.small_size %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</section>
